generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

model autoresponder {
  id                             String                     @id @default(cuid()) @db.VarChar(255)
  tenantID                       String?                    @db.VarChar(255)
  name                           String?                    @db.VarChar(255)
  mail_address                   String?                    @unique @db.VarChar(60)
  autoresponder_status           Boolean?
  app_registration_clientid      String?                    @db.VarChar(255)
  app_registration_client_secret String?                    @db.VarChar(255)
  app_registration_tenantid      String?                    @db.VarChar(255)
  last_retrival_timestamp        DateTime?                  @db.Timestamp(6)
  autoresponder_categories       autoresponder_categories[]
}

model autoresponder_categories {
  id                      String         @id @default(cuid()) @db.VarChar(255)
  autoresponderID         String?        @db.VarChar(255)
  categorizer_workflow_id String?        @db.VarChar(255)
  category_workflows      Json?          @db.Json
  autoresponder           autoresponder? @relation(fields: [autoresponderID], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model autoresponder_email_reply_tracker {
  id              String    @id @db.VarChar(255)
  message_id      String?   @db.VarChar
  mail_address    String?   @db.VarChar(255)
  category        String?   @db.VarChar(255)
  reply_timestamp DateTime? @db.Timestamp(6)
  confidence      Int?
  subject         String?
}

model autoresponder_email_thread_tracker {
  id              String  @id @db.VarChar(255)
  conversation_id String? @db.VarChar
  replies_count   Int
  drafts_count    Int
  mail_address    String? @db.VarChar(60)
}

model autoresponder_templates {
  id       String  @id @db.VarChar(255)
  template String?
}
